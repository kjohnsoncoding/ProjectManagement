@model ProjectManagement.Models.Customer.CustomerDetail

@{
    ViewBag.Title = "Details";
}

    <h2>@Html.DisplayFor(model => model.Name)</h2>

    <div>
        <h4>@Html.DisplayFor(model => model.CustomerType)</h4>
        <h6><strong>@Html.DisplayNameFor(model => model.CustomerAdded):</strong> @Html.DisplayFor(model => model.CustomerAdded) | <strong>@Html.DisplayNameFor(model => model.LastUpdated):</strong> @Html.DisplayFor(model => model.LastUpdated)</h6>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <h4><strong>Mailing Information</strong></h4>
                <p><strong>@Html.DisplayNameFor(model => model.Address)</strong><br />
                @Html.DisplayFor(model => model.Address)<br />
                @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State)</p>

                <hr />
            </div>

            <div class="col-md-6">
                <h4><strong>Contact Information</strong></h4>
                <p><strong>@Html.DisplayNameFor(model => model.PhoneNumber)</strong><br />
                @Html.DisplayFor(model => model.PhoneNumber)</p>

                <p><strong>@Html.DisplayNameFor(model => model.EmailAddress)</strong><br />
                @Html.DisplayFor(model => model.EmailAddress)</p>

                <hr />
            </div>
        </div>
    </div>
    <p>
        <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                Options
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Update", "Update", new { id = Model.CustomerId })</li>
                <li>@Html.ActionLink("Back to List", "Index")</li>
            </ul>
        </div>
    </p>
