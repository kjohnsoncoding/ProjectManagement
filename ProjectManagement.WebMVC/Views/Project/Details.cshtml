@model ProjectManagement.Models.Project.ProjectDetail

@{
    ViewBag.Title = "Details";
}

<h2>Project Information</h2>
@Html.HiddenFor(model => model.ProjectId)
<div>
    <h4>@Html.DisplayFor(model => model.ProjectName)</h4>
    <h6>@Html.DisplayNameFor(model => model.ProjectStartDate): @Html.DisplayFor(model => model.ProjectStartDate) | @Html.DisplayNameFor(model => model.ProjectUpdated): @Html.DisplayFor(model => model.ProjectUpdated)</h6>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <h4><strong>@Html.DisplayNameFor(model => model.ProjectDetails)</strong></h4>
            <p>@Html.DisplayFor(model => model.ProjectDetails)</p>

            <hr />

            <h4><strong>@Html.DisplayNameFor(model => model.Equipment)</strong></h4>
            <p>@Html.DisplayFor(model => model.Equipment)</p>

            <hr />

            <h4><strong> @Html.DisplayNameFor(model => model.Vehicle)</strong></h4>
            <p>@Html.DisplayFor(model => model.Vehicle)</p>
        </div>

        <div class="col-md-6">
            <h4><strong>@Html.DisplayNameFor(model => model.ProjectStatus)</strong></h4>
            <p>@Html.DisplayFor(model => model.ProjectStatus)</p>

            <hr />

            <h4><strong>@Html.DisplayNameFor(model => model.Customer)</strong></h4>
            <p>@Html.DisplayFor(model => model.CustomerName)</p>

            <hr />

            <h4><strong>@Html.DisplayNameFor(model => model.Employee)</strong></h4>
            <p>@Html.DisplayFor(model => model.EmployeeName)</p>
        </div>
    </div>
</div>
<p>
    <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
            Options
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Update", "Update", new { id = Model.ProjectId })</li>
            <li>@Html.ActionLink("Back to List", "Index")</li>
        </ul>
    </div>
</p>
