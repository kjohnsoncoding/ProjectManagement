@model IEnumerable<ProjectManagement.Models.Employee.EmployeeList>

@{
    ViewBag.Title = "Index";
}

<h2>Employee Index</h2>
<h4>Utilize this section to add, edit, view and delete employees from the database.</h4>
<p>
    <input type="button" class="btn btn-primary btn-sm" style="width: 140px;" value="New Employee &raquo;" onclick="location.href='@Url.Action("Create", "Employee")'">
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        <th>
            @Html.DisplayNameFor(model => model.EmployeeCreated)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeCreated)
            </td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                        Options
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Update", "Update", new { id = item.EmployeeId })</li>
                        <li>@Html.ActionLink("Details", "Details", new { id = item.EmployeeId })</li>
                        <li>@Html.ActionLink("Delete", "Delete", new { id = item.EmployeeId })</li>
                    </ul>
                </div>
            </td>
        </tr>
    }

</table>
